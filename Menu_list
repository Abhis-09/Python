#Menu-Based Program using Lists and User Input

my_list = [1, 2, "apple", "banana", 3]

while True:
    print("\n MENU. ")
    print("1. Insert (Add an element)")
    print("2. Update (Modify existing element)")
    print("3. Delete (Remove element)")
    print("4. Search (Find element or index)")
    print("5. Clear (Remove all elements)")
    print("6. Display (Show list)")
    print("7. Exit")

    choice = input("Enter your choice (1-7): ")

    # 1. Insert
    if choice == '1':
        item = input("Enter element to add: ")
        my_list.append(item)

        print("Element added successfully!")
        print("Updated List:", my_list)

    # 2. Update
    elif choice == '2':
        if my_list:
            print("Current List:", my_list)
            try:
                index = int(input("Enter index to update: "))
                if 0 <= index < len(my_list):
                    new_item = input("Enter new value: ")
                    my_list[index] = new_item
                    print("Element updated successfully!")
                else:
                    print("Invalid index!")
            except ValueError:
                print("Please enter a valid number for index.")
        else:
            print("The list is empty!")

    # 3. Delete
    elif choice == '3':
        if my_list:
            print("\nDelete Options:")
            print("1. Remove last element")
            print("2. Remove by index")
            print("3. Remove by value")
            del_choice = input("Choose delete option (1-3): ")

            # Delete last element
            if del_choice == '1':
                removed = my_list.pop()
                print(f"Removed last element: {removed}")

            # Delete by index
            elif del_choice == '2':
                try:
                    index = int(input("Enter index to delete: "))
                    if 0 <= index < len(my_list):
                        removed = my_list.pop(index)
                        print(f"Removed element '{removed}' at index {index}")
                    else:
                        print("Invalid index!")
                except ValueError:
                    print("Please enter a valid number for index.")

            # Delete by value
            elif del_choice == '3':
                item = input("Enter element to remove: ")
                if item in my_list:
                    my_list.remove(item)
                    print(f"'{item}' removed successfully!")
                else:
                    print("Element not found!")

            else:
                print("Invalid delete option!")

        else:
            print("The list is empty!")

    # 4. Search
    elif choice == '4':
        if my_list:
            print("\nSearch Options:")
            print("1. Search by value")
            print("2. Search by index")
            search_choice = input("Choose search option (1-2): ")

            # Search by value
            if search_choice == '1':
                item = input("Enter element to search: ")
                if item in my_list:
                    print(f"Found '{item}' at index {my_list.index(item)}")
                else:
                    print("Element not found!")

            # Search by index
            elif search_choice == '2':
                try:
                    index = int(input("Enter index to view element: "))
                    if 0 <= index < len(my_list):
                        print(f"Element at index {index} is '{my_list[index]}'")
                    else:
                        print("Invalid index!")
                except ValueError:
                    print("Please enter a valid number for index.")
            else:
                print("Invalid search option!")

        else:
            print("The list is empty!")

    # 5. Clear List
    elif choice == '5':
        my_list.clear()
        print("List cleared successfully!")

    # 6. Display List
    elif choice == '6':
        print("Current List:", my_list)

    # 7. Exit
    elif choice == '7':
        print("Exiting program...")
        break

    else:
        print("Invalid choice! Please enter a number from 1 to 7.")
