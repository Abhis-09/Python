#WhileLoop_odd-Even Number
num = int(input("Enter the number: "))

#Even Numbers
i = 1
while i <= 10:
    if i % 2 == 0:
        print(f"{num} * {i} = {num * i}")
    i += 1


#odd Numbers
num = int(input("Enter the number: "))

i = 1
while i <= 10:
    if i % 2 != 0:
        print(f"{num} * {i} = {num * i}")
    i += 1
