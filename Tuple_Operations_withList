#Tuple_operations with list


# Defining a list containing tuples
my_list = [(1, 2, 3), ('apple', 'banana'), (10, 20, 30, 40)]

# Print the original list
print("Original List with Tuples:")
print(my_list)

# Accessing tuple elements inside the list
print("\nAccessing elements from tuples inside the list:")
print(f"First tuple: {my_list[0]}")  # (1, 2, 3)
print(f"Second tuple: {my_list[1]}")  # ('apple', 'banana')

# Accessing individual elements from inside the tuple
print("\nAccessing individual elements from inside the tuple:")
print(f"Element from first tuple: {my_list[0][1]}")  # 2 (from (1, 2, 3))
print(f"Element from second tuple: {my_list[1][0]}")  # 'apple' (from ('apple', 'banana'))

# Slicing the list of tuples
print("\nSlicing the list of tuples:")

print(my_list[:2])  # [(1, 2, 3), ('apple', 'banana')]

# Modifying a tuple inside the list (Tuples are immutable, but you can modify the list itself)
print("\nModifying the list containing tuples:")
my_list[0] = (4, 5, 6)  # Replacing the first tuple
print(my_list)

# Adding a new tuple to the list
my_list.append((100, 200))
print("\nList after appending a new tuple:")
print(my_list)

# Nested lists inside tuples
print("\nWorking with lists inside a tuple:")
my_tuple = (1, 2, [3, 4, 5], 'hello')
print(f"Original Tuple: {my_tuple}")

# Accessing and modifying the list inside the tuple
my_tuple[2][0] = 99  # Modify the first element of the list inside the tuple
print(f"Modified Tuple: {my_tuple}")

# Adding an element to the list inside the tuple
my_tuple[2].append(6)
print(f"Modified Tuple after appending an element: {my_tuple}")

# Tuples and Lists combined into a dictionary
print("\nCombining Tuples and Lists in a dictionary:")
my_dict = {
    'numbers': [1, 2, 3],
    'letters': ('a', 'b', 'c')
}
print(my_dict)

# Accessing and modifying values in the dictionary
print("\nAccessing elements in the dictionary:")
print(f"List of numbers: {my_dict['numbers']}")
print(f"Tuple of letters: {my_dict['letters']}")

my_dict['numbers'].append(4)  # Modify the list inside the dictionary
print(f"Modified list of numbers: {my_dict['numbers']}")
